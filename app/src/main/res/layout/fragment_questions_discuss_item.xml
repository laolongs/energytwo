<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="@dimen/y8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/ops_questions_tab_bg"
            android:layout_width="@dimen/x60"
            android:gravity="center"
            android:layout_height="@dimen/y60">
            <TextView
                android:id="@+id/discuss_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:text="杜"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/x6"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/discuss_name"
                    android:layout_marginTop="@dimen/x8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:text="杜承军"/>
                <TextView
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_marginTop="@dimen/x8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工程师1组"/>
            </LinearLayout>
            <TextView
                android:id="@+id/discuss_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018/01/02 12:30:12"/>
            <TextView
                android:id="@+id/discuss_content"
                android:layout_marginTop="@dimen/x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:text="巡视工程师张庆丰在2月月度第二次例行巡视发现此问题."/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/y8"
        style="@style/cut_off_line_1dp"/>
</LinearLayout>