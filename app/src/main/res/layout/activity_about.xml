<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toobar_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        style="@style/toolbar"
        android:background="@color/toobar_bg"
        app:layout_scrollFlags="scroll|enterAlways">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/toolbar_text"
            style="@style/toolbar_center" />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_login_logo" />

        <LinearLayout
            android:id="@+id/layout_newversion"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="最新版本"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textview_newversion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <View style="@style/cut_off_line_1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="当前版本"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textview_curversion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <View style="@style/cut_off_line_1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="公司简介"
            android:textColor="@color/white" />

        <TextView
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:id="@+id/textview_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
