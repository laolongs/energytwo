<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tties.cn.energy.view.activity.Energy_ElectricalActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/toobar"/>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            >
            <RelativeLayout
                android:id="@+id/electrical_Rl"
                android:background="@drawable/electrical_item_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/electrical_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginRight="10dp"
                        android:text="上月用电比例"
                       />
                    <TextView
                        android:id="@+id/enerey_electrical_month"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:text="2018-02"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/electrical_rl"
                    android:id="@+id/electrical_r2"
                    android:layout_width="200dp"
                    android:layout_centerInParent="true"
                    android:layout_height="200dp"
                    android:orientation="vertical">
                    <tties.cn.energy.common.MyProgressRound
                        android:id="@+id/electrical_myview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:ringSize="10dp"
                        app:progressColor="#883399"
                        app:textSize="30sp"
                        android:layout_centerInParent="true"/>
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_logo"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/electrical_r3"
                    android:layout_below="@+id/electrical_r2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center"
                            android:background="@drawable/energy_cusp_text_shop"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:textColor="@color/white"
                            android:text="尖"/>
                        <TextView
                            android:id="@+id/enerey_electrical_cusp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0度"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <!--android:background="#74BDFF"-->
                        <TextView
                            android:gravity="center"
                            android:background="@drawable/energy_hight_text_shop"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:textColor="@color/white"
                            android:text="高"/>
                        <TextView
                            android:id="@+id/enerey_electrical_hight"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0度"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center"
                            android:background="@drawable/energy_low_text_shop"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:textColor="@color/white"
                            android:text="低"/>
                        <TextView
                            android:id="@+id/enerey_electrical_low"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="0度"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="40dp">
            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="上月总电量（度）"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="上月总电量（元）"/>
            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="1dp">
            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="1dp"
               android:background="@color/gray"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/enerey_electrical_kva"
                android:gravity="center"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="1500kVA"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/enerey_electrical_price"
                android:gravity="center"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="45000元"
                />
            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="15dp"
            style="@style/cut_off_line_9dp"
            />
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="24dp"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="历史趋势"/>
            <TextView
                android:gravity="center"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                />
            <TextView
                android:gravity="center"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="选择年度"
                />
            <TextView
                android:gravity="center"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="2018年"

                />
            <ImageView
                android:id="@+id/enerey_electrical_select"
                android:layout_marginRight="24dp"
                android:background="@color/black"
                android:src="@mipmap/arrows"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="vertical">
                <tties.cn.energy.chart.LineDataChart
                    android:id="@+id/enerey_electrical_chart"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/electrical_r2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="12dp" >
                </tties.cn.energy.chart.LineDataChart>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
