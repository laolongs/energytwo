<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tties.cn.energy.view.activity.EnergyActivity">
    <include layout="@layout/toobar"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@mipmap/bg_identity"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content">
               <tties.cn.energy.common.CircleProgressBar
                   android:id="@+id/tasks_view"
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   app:radius="50dip"
                   app:ringColor="#649EE3"
                   app:strokeWidth="10dip"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:text="您目前击败了"/>
                <TextView
                    android:id="@+id/energy_usermark"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:text="14%"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:text="的同行用户！"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="2">
            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/energy_bar"
                android:rating="5"
                android:isIndicator="false"
                style="?attr/radioButtonStyle"
                android:progressTint="#C4E8F4"
                android:secondaryProgressTint="#88CAEB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="用电经济星级评价"/>
        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
           style="@style/cut_off_line_1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="vertical"
           >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/energy_baseenergy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/energy_base"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="基本电费优化"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/border"
                    android:layout_width="1dp" />
                <LinearLayout
                    android:id="@+id/energy_electrical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/energy_charge"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="电度电费优化"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/border"
                    android:layout_width="1dp" />
                <LinearLayout
                    android:id="@+id/energy_force"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/energy_force"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="力调电费优化"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <View
                style="@style/cut_off_line_1dp"/>
            <LinearLayout
                android:id="@+id/energy_transformer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/energy_transformer"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="变压器优化"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/border"
                    android:layout_width="1dp" />
                <LinearLayout
                    android:id="@+id/energy_ops"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/energy_ops"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="运维月报"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/border"
                    android:layout_width="1dp" />
                <LinearLayout
                    android:id="@+id/energy_energy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/energy_energy"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="能效月报"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
